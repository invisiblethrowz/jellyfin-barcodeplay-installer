    <HintPath>lib/Microsoft.Extensions.Logging.Debug.dll</HintPath>
  </Reference>
  <Reference Include="Microsoft.Extensions.Logging.EventLog">
    <HintPath>lib/Microsoft.Extensions.Logging.EventLog.dll</HintPath>
  </Reference>
  <Reference Include="Microsoft.Extensions.Logging.EventSource">
    <HintPath>lib/Microsoft.Extensions.Logging.EventSource.dll</HintPath>
  </Reference>
  <Reference Include="Microsoft.Extensions.Logging.TraceSource">
